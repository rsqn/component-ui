<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0.0-SNAPSHOT"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0.0-SNAPSHOT http://maven.apache.org/xsd/assembly-1.1.0.0-SNAPSHOT.xsd">
    <id>source-jar</id>
    <baseDirectory>/</baseDirectory>
    <formats>
        <format>jar</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/src/main/webapp/js</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>**/**</include>
            </includes>
            <excludes>
                <exclude>*index.js</exclude>
            </excludes>
        </fileSet>
    </fileSets>
</assembly>
